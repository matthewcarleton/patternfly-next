{{#> alert-upgrade-examples}}
  {{#> alert alert--modifier="pf-m-success" alert--attribute='aria-label="Success Notification"'}}
    {{#> alert-icon alert-icon--success="true"}}
    {{/alert-icon}}
    {{#> alert-body alert-body--attribute='role="alert"'}}
      {{#> alert-title}}
        {{#> accessibility accessibility--type="sr-only"}}success: {{/accessibility}}
        The server configuration changed.
      {{/alert-title}}
    {{/alert-body}}
    {{#> alert-action}}
      {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Remove"'}}
          <i class="fas fa-times"></i> 
      {{/button}}
      {{/alert-action}}
  {{/alert}}
<br>
{{#> alert alert--modifier="pf-m-danger" alert--attribute='aria-label="Danger Notification"'}}
  {{#> alert-icon alert-icon--danger="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-title}}
      {{#> accessibility accessibility--type="sr-only"}}danger: {{/accessibility}}
        Failed to add server_abc.
      {{/alert-title}}
  {{/alert-body}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-warning" alert--attribute='aria-label="Warning Notification"'}}
  {{#> alert-icon alert-icon--warning="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-title}}
      {{#> accessibility accessibility--type="sr-only"}}warning: {{/accessibility}}
      The server configuration changed.
    {{/alert-title}}
  {{/alert-body}}
  {{#> alert-action}}
    {{#> button button--modifier="pf-m-link"}}
      Reload server
    {{/button}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Remove"'}}
      <i class="fas fa-times"></i>
    {{/button}}
  {{/alert-action}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-info" alert--attribute='aria-label="Information Notification"'}}
  {{#> alert-icon alert-icon--info="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-title}}
      {{#> accessibility accessibility--type="sr-only"}}info: {{/accessibility}}
      Great job! This is really working out.
    {{/alert-title}}
  {{/alert-body}}
  {{#> alert-action}}
    {{#> button button--modifier="pf-m-link"}}
      Reload server
    {{/button}}
		{{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Remove"'}}
				<i class="fas fa-ellipsis-v"></i> 
		{{/button}}
  {{/alert-action}}
{{/alert}}
{{/alert-upgrade-examples}}