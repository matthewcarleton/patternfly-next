{{#> form}}
  {{#> form-group}}
    {{#> form-label for="textInput1"}}Standard input{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput1" id="textInput1"}}{{/form-control}}
  {{/form-group}}
  {{#> form-group}}
    {{#> form-label for="textInput2"}}Input with placeholder{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput2" id="textInput2" placeholder="Placeholder input example"}}{{/form-control}}
  {{/form-group}}
    {{#> form-group}}
    {{#> form-label for="textInput3"}}Readonly Input{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput3" id="textInput3" readonly="true" value="Readonly input example"}}{{/form-control}}
  {{/form-group}}
  {{#> form-group}}
    {{#> form-label for="textInput4" required="true"}}Required input{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput4" id="textInput4" required="true"}}{{/form-control}}
  {{/form-group}}
  {{#> form-group}}
    {{#> form-label for="textInput5" pf-c-form__label--modifier="pf-m-disabled"}}Disabled input{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput5" id="textInput5"  disabled="yes" placeholder="Disabled input example"}}{{/form-control}}
  {{/form-group}}
  {{#> form-group}}
    {{#> form-label for="textInput6"}}Input with helper text{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput6" id="textInput6" aria-describedby="helper1"}}{{/form-control}}
    {{#> form-helper-text id="helper1" }}This text is describing the above input{{/form-helper-text}}
  {{/form-group}}

  {{#> form-group}}
    {{#> form-label for="textInput7"}}Inactive Error state input with inactive helper text{{/form-label}}
    {{#> form-control controlType="input" input="true" type="text" name="textInput7" id="textInput7" }}{{/form-control}}
    {{#> form-helper-text pf-c-form__helper--modifier="pf-m-error pf-m-inactive" id="helper2" aria-live="polite"}}This is inactive helper text{{/form-helper-text}}
  {{/form-group}} 

  {{#> form-group}}
    {{#> form-label for="textInput8"}}Error state input with helper text{{/form-label}}
    {{#> form-control controlType="input" input="true" pf-c-form-control--modifier="pf-m-invalid" reqiured="true" aria-invalid="true" aria-errormessage="helper3" type="text" name="textInput8" id="textInput8"}}{{/form-control}}
    {{#> form-helper-text pf-c-form__helper--modifier="pf-m-error" id="helper3" aria-live="polite"}}This is helper text{{/form-helper-text}}
  {{/form-group}}
{{/form}}
